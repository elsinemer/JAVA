public class Main {
    public static void main(String[] args) {
        java.util.Random rand = new java.util.Random();
        int sumaImpares = 0;

        System.out.println("Generando enteros al azar entre 0 y 10 (inclusive)...");
        while (sumaImpares <= 25) {
            int n = rand.nextInt(11); // 0..10
            boolean esPar = (n % 2 == 0);

            if (esPar) {
                System.out.println(n + " -> es par");
            } else {
                System.out.println(n + " -> NO es par (impar)");
                sumaImpares += n;
            }
        }

        System.out.println("-----");
        System.out.println("Suma de impares super√≥ 25. Suma final = " + sumaImpares);
    }
}
